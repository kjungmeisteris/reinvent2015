# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()

# Tasks
GET     /tasks/dispatch/:id         controllers.Task.dispatch(id: Long)
POST    /tasks/fromMessage          controllers.Task.fromMessage(sender: String, incomingMessage: String, lat: Double ?= 0, lng: Double ?= 0)

# Outreach team stuff
GET /outreach/all                   controllers.Outreach.getAll()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
